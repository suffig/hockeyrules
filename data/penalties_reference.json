  "penalty_types": [
    {
      "type": "Minor Penalty",
      "rule": 16,
      "duration_minutes": 2,
      "substitution_allowed": false,
      "causes_short_handed": true,
      "auto_game_misconduct": false,
      "description": "Player ruled off ice for two minutes. No substitute permitted. Automatically terminates if short-handed team scores."
    },
    {
      "type": "Bench Minor Penalty",
      "rule": 17,
      "duration_minutes": 2,
      "substitution_allowed": true,
      "substitution_type": "Any non-goalkeeper from team",
      "causes_short_handed": true,
      "auto_game_misconduct": false,
      "description": "Penalty assigned to team/bench. Any non-goalkeeper player serves. Automatically terminates if short-handed team scores."
    },
    {
      "type": "Double-Minor Penalty",
      "rule": 18,
      "duration_minutes": 4,
      "duration_notes": "2 + 2 minutes",
      "substitution_allowed": false,
      "causes_short_handed": true,
      "causes_short_handed_notes": "1 minute washes out if goal scored during delay",
      "auto_game_misconduct": false,
      "description": "Player ruled off ice for four minutes total. If goal scored during delay, one (1) minute washes out and only 2 minutes served."
    },
    {
      "type": "Major Penalty",
      "rule": 20,
      "duration_minutes": 5,
      "substitution_allowed": true,
      "substitution_type": "After entire 5-minute period expires",
      "causes_short_handed": true,
      "short_handed_notes": "Penalized player does NOT leave penalty box on opposing goal",
      "auto_game_misconduct": "Sometimes",
      "auto_game_misconduct_triggers": [
        "Second major penalty in same game",
        "Specific infractions listed in Rule 20.4 and Table 6"
      ],
      "description": "For first major: Player ruled off ice for five minutes. No substitute permitted during penalty. Substitute enters after expiry."
    },
    {
      "type": "Misconduct Penalty",
      "rule": 22,
      "duration_minutes": 10,
      "substitution_allowed": true,
      "substitution_type": "Immediate",
      "causes_short_handed": false,
      "causes_short_handed_notes": "Only if combined with minor/major penalty",
      "auto_game_misconduct": "If 2nd misconduct in same game",
      "description": "Player ruled off ice for ten minutes. Substitute permitted immediately. Player remains in box until next stoppage after expiry. Auto game misconduct if 2nd in game."
    },
    {
      "type": "Game Misconduct Penalty",
      "rule": 23,
      "duration_type": "Ejection",
      "duration_recorded": "20 minutes (for statistics)",
      "substitution_allowed": true,
      "substitution_type": "Immediate",
      "causes_short_handed": false,
      "description": "Player suspended for balance of game. Recorded as 20 minutes in statistics. Player/Coach reported to Proper Authorities for further disciplinary action."
    },
    {
      "type": "Penalty Shot",
      "rule": 24,
      "duration_type": "Single Attempt",
      "description": "Awarded when scoring opportunity lost due to infraction. Puck at center face-off spot. Player attempts to score. No rebounds count (except post/crossbar to goalie to goal)."
    },
    {
      "type": "Awarded Goal",
      "rule": 25,
      "duration_type": "Automatic",
      "description": "Goal awarded when specific infractions prevent scoring opportunity. No penalty shot needed."
    }
  ],
