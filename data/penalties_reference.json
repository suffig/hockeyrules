  "key_concepts": {
    "short_handed": {
      "definition": "Team is below opponent's numerical strength on ice when goal is scored",
      "minor_penalty_termination": true,
      "major_penalty_termination": false,
      "misconduct_penalty_termination": false,
      "note": "Misconduct does not cause short-handed unless combined with minor/major"
    },
    "automatic_game_misconduct_triggers": [
      "Second major penalty in same game",
      "Second misconduct penalty in same game",
      "Specific infractions listed in Rule 20.4 and Table 6"
    ],
    "coincidental_penalties": {
      "equal_duration": "Penalties offset, players sit in boxes until next stoppage",
      "multiple_penalties": "Cancel majors first, then minors/bench minors/double-minors",
      "last_five_minutes": "Minor vs Major = 3-minute differential as major; Double-minor vs Major = 1-minute differential as major"
    },
    "delayed_penalty": {
      "applies_when": "Non-puck-controlling team commits infraction",
      "procedure": "Referee raises arm, play continues, penalty assessed when offending team gains control",
      "does_not_apply_to": "Equal coincidental penalties"
    }
